<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="match_parent"
    android:background="@drawable/black"
    android:scaleType = "centerCrop">


    <LinearLayout
        android:id="@+id/charInfo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <FrameLayout
            android:id="@+id/numberFrame"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight=".4">

        </FrameLayout>

        <TextView
            android:id="@+id/TVnumber"
            android:layout_width="50dp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="number"
            android:textAlignment="center" />

        <FrameLayout
            android:id="@+id/rarityFrame"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight=".4">

        </FrameLayout>

        <TextView
            android:id="@+id/TVrarity"
            android:textColor="@android:color/white"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="rarity"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/staticPercent"
        android:layout_width="90dp"
        android:layout_height="260dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dynamicPercent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/b7" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/b8" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/b9" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/b10" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="match_parent"
